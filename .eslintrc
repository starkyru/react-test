{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "brace-style": 2,
    "semi": 2,
    "no-console": 0,
    "no-debugger": 2,
    "quotes": 0,
    "object-shorthand": ["error", "always", { "avoidQuotes": true }],
    "react/jsx-boolean-value": 1,
    "jsx-quotes": 1,
    "no-unused-vars": 1,
    "no-nested-ternary": 0,
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": 0,
    "react/no-unknown-property": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": [
      1,
      {
        "order": [
          "type-annotations",
          "static-methods",
          "lifecycle",
          "everything-else",
          "render"
        ],
        "groups": {
          "lifecycle": [
            "displayName",
            "propTypes",
            "contextTypes",
            "childContextTypes",
            "mixins",
            "statics",
            "defaultProps",
            "state",
            "constructor",
            "getDefaultProps",
            "getInitialState",
            "getChildContext",
            "componentWillMount",
            "componentDidMount",
            "componentWillReceiveProps",
            "shouldComponentUpdate",
            "componentWillUpdate",
            "componentDidUpdate",
            "componentWillUnmount"
          ]
        }
      }
    ],
    "react/jsx-wrap-multilines": 1,
    "import/no-duplicates": 2,
    "import/no-mutable-exports": 2,
    "import/no-self-import": 2,
    "import/first": 2,
    "import/exports-last": 2,
    "import/no-default-export": 2,
    "import/no-named-default": 2,
    "import/no-anonymous-default-export": 2,
    "import/newline-after-import": 1,
    "no-default-export/no-default-export":  2,
    "react-hooks/rules-of-hooks": "error",
    // "import/group-exports": 2 // NOT WORKING WITH export type!
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  },
  "plugins": ["react", "react-hooks", "import", "prettier", "no-default-export"]
}
